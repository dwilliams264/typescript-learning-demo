{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "outDir": "./public",
    "rootDir": "./public",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "verbatimModuleSyntax": false
  },
  "include": ["public/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
